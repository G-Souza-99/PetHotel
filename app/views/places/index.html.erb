<div class="container">

  <div class="text-center">
    <h1 class="mt-4 mb-3"> Find your pet a love nest </h1>
    <% if policy(Place).create? %>
      <%= link_to '+ Add Place', new_place_path, class:'btn btn-danger mb-4' %>
    <% end %>
  </div>

  <div class="row">
      <% @places.each do |place| %>
          <%= link_to place_path(place) do %>
          <div class="co-12 colsm-6 col-md-4 mb-3">
              <div class="card-trip">
                <%= cl_image_tag place.photo.key %>
                <div class="card-trip-infos">
                  <div>
                    <h2><%= place.name.capitalize %></h2>
                    <p><%= place.address.capitalize %></p>
                  </div>
                  <h2 class="card-trip-pricing">50â‚¬</h2>
                </div>
          </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
