<div class="container">
  <h2
    style="
      margin-left: auto;
      margin-right: auto;
      width: 500px;
      text-align: center;
    "
  >
    Log in
  </h2>

  <%= simple_form_for(resource, as: resource_name, url:
  session_path(resource_name)) do |f| %>
  <div
    class="form-inputs"
    style="margin-left: auto; margin-right: auto; width: 500px"
  >
    <div style="">
      <%= f.input :email, required: false, autofocus: true, input_html: {
      autocomplete: "email", :value => 'user@domain.com' } %>
    </div>
    <div>
      <%= f.input :password, required: false, input_html: { autocomplete:
      "current-password", :value => '**********'} %>
    </div>
    <div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div
    class="form-actions"
    style="
      margin-left: auto;
      margin-right: auto;
      width: 100;
      text-align: center;
    "
  >
    <button><%= f.button :submit, "Log in" %></button>
  </div>
  <% end %>

  <div
    style="
      margin-left: auto;
      margin-right: auto;
      width: 100;
      text-align: center;
    "
  >
    <%= render "devise/shared/links" %>
  </div>
</div>
