<div class="container">
  <div class="row">
    <div class="offset-md-4 col-4">
      <h2 class="text-center">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url:
      session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: {
        autocomplete: "email", :value => 'user@domain.com' } %>
      </div>
      <div>
        <%= f.input :password, required: false, input_html: { autocomplete:
        "current-password", :value => '**********'} %>
      </div>
      <div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        %>
      </div>
      <div class="form-actions d-flex align-content-center">
        <%= f.button :submit, "Log in", class:"button mx-auto" %>
      </div>
      <% end %>

      <div class="devise-shared-links"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
